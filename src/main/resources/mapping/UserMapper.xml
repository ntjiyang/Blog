<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ys.wg.dao.UserDao">

    <resultMap id="UserBaseMap" type="com.ys.wg.model.User">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="username" property="userName" jdbcType="VARCHAR"/>
        <result column="phone" property="userPhone" jdbcType="VARCHAR"/>
        <result column="email" property="userEmail" jdbcType="VARCHAR"/>
        <result column="password" property="password" jdbcType="VARCHAR"/>
        <result column="head_image" property="headImage" jdbcType="VARCHAR"/>
        <result column="follow" property="follow" jdbcType="VARCHAR"/>
        <result column="fans" property="fans" jdbcType="INTEGER"/>
        <result column="is_delete" property="isDelete" jdbcType="INTEGER"/>
        <result column="information" property="userInformation" jdbcType="VARCHAR"/>
    </resultMap>

    <select id="selectUserById" parameterType="int" resultMap="UserBaseMap">
        SELECT * FROM users
        WHERE id = #{userId}
    </select>

    <select id="selectUserByPhoneOrEmail" resultMap="UserBaseMap">
        SELECT * FROM users
        WHERE user_email = #{emailOrPhone} OR user_phone = #{emailOrPhone}
        AND user_state = #{state}
    </select>

    <select id="selectAllUser" resultMap="UserBaseMap">
        SELECT * FROM users
    </select>
    
    <select id="userLogin" parameterType="com.ys.wg.model.User" resultMap="UserBaseMap">
    	SELECT * FROM users WHERE username=#{userName} and password = #{password} and is_delete=0
    </select>
    
    <select id="selectUserByName" parameterType="String" resultMap="UserBaseMap">
    	SELECT username FROM users WHERE username=#{userName}
    </select>
    
    <insert id="insertUser" parameterType="com.ys.wg.model.User">
    	INSERT INTO users (username,password,email,phone) VALUES (#{userName},#{password},#{userEmail},#{userPhone})
    </insert>
    
    <select id="selectUserInforByName" parameterType="String" resultMap="UserBaseMap">
    	SELECT * FROM users WHERE username=#{userName}
    </select>

	<update id="updateUserInfor" parameterType="com.ys.wg.model.User">
		UPDATE users SET password = #{password},head_image = #{headImage},information=#{userInformation}
		WHERE username=#{userName}
	</update>


</mapper>